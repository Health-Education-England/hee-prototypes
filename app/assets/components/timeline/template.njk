{% if params.title %}
  <h2>{{ params.title | safe }}</h2>
{% else %}
  <h2>Timeline Component</h2>
{% endif %}

{% if params.start %}
  <p>This round of recruitment is for posts that start in {{ params.start | safe }}.</p>
{% else %}
  <p>Posts for the current round of recruitment.</p>
{% endif %}

<p>All times are in UK local time (GMT or BST).</p>

{% if params.events %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      <div class="nhs-uk__timeline-card" >
        {% if params.period %}
          <h3>{{ params.period }}</h3>
        {% else %}
          <h3>Date TBC</h3>
        {% endif %}
        {% for item in params.events %}
          <div>
            {% if item.title %}
              <h4>{{ item.title }}</h4>
            {% endif %}
            {% if item.description %}
              <p>{{ item.description }}</p>
            {% endif %}
            <div class="nhsuk-grid-row">
              <div>
                <span class="nhsuk-grid-column-one-third"><b>Date</b></span>
                <span class="nhsuk-grid-column-two-thirds">
                  {% if item.date %}
                    {{ item.date }}
                  {% else %}
                    TBC
                  {% endif %}
                </span>
              </div>
              <hr>
              {% if item.time %}
                <div>
                  <span class="nhsuk-grid-column-one-third"><b>Time</b></span>
                  <span class="nhsuk-grid-column-two-thirds">
                      {{ item.time }}
                  </span>
                </div>
                <hr>
              {% endif %}
              {% if item.location %}
                <div>
                  <span class="nhsuk-grid-column-one-third"><b>Location</b></span>
                  <span class="nhsuk-grid-column-two-thirds">
                      {{ item.location }}
                  </span>
                </div>
                <hr>
              {% endif %}
              {% if item.contact %}
                <div>
                  <span class="nhsuk-grid-column-one-third"><b>Contact</b></span>
                  <span class="nhsuk-grid-column-two-thirds">
                      <a href="mailto:{{ item.contact }}" >{{ item.contact }}</a>
                  </span>
                </div>
                <hr>
              {% endif %}
              {% if item.link %}
                <div>
                  <span class="nhsuk-grid-column-one-third"><b>Link</b></span>
                  <span class="nhsuk-grid-column-two-thirds">
                    <a href="{{ item.link }}" target="_blank">Link (Opens in new window)</a>
                  </span>
                </div>
                <hr>
              {% endif %}
              {% if item.text %}
                <div>
                    <span class="nhsuk-grid-column-one-third"><b>Details</b></span>
                  <span class="nhsuk-grid-column-two-thirds">
                    {{ item.text }}
                  </span>
                </div>
                <hr>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% else %}
  <h3 class="nhsuk__timeline-no-events" >No Events to Display</h3>
{% endif %}


