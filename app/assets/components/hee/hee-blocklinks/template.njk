{% if params.links %}
  <div class="nhsuk-blocklinks">
    <div class="nhsuk-u-reading-width">
      {%- if params.heading %}
        <h2>{{ params.heading }}</h2>
      {% endif -%}
      {{ params.HTML | safe }}
    </div>

    <ul class="nhsuk-list-blocklinks {% if params.columns=="2"%}nhsuk-list-blocklinks--two-columns{% elif params.columns=="1"%}nhsuk-list-blocklinks--one-column{% endif %}">
      {%- for item in params.links %}
        <li>
          <a href="{{item.url}}">
            <svg class="nhsuk-icon nhsuk-icon__chevron-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
              aria-hidden="true" focusable="false">
              <path d="M15.5 12a1 1 0 0 1-.29.71l-5 5a1 1 0 0 1-1.42-1.42l4.3-4.29-4.3-4.29a1 1 0 0 1 1.42-1.42l5 5a1 1 0 0 1 .29.71z">
              </path>
            </svg>
            {{item.label}}
          </a>
        </li>
      {%- endfor %}
    </ul>
  </div>
{% endif -%}