{% macro imageCard(params) %}
  <figure class="hee-sidebarimage">
    {%- if params.imgURL %}
      <img class="hee-sidebarimage__img" src="{{ params.imgURL }}" alt="{{ params.imgALT }}" />
    {%- endif %}
    {%- if params.imgCaption %}
    <figcaption class="hee-sidebarimage__caption">
      {{ params.imgCaption }}
    </figcaption>
    {%- endif %}
  </figure>
{% endmacro %}