{% macro departmentCard(params) %}

{#{ departmentCard({
    name: "Paediatrics", 
    organisation: "University Hospitals Birmingham NHS Foundation Trust ",
    email: "email@hee.co.uk",
    website: "http://nhs.uk/",
    description: "Lorem ipsum dolor sit amet"
}) }#}
  
{%- if params.gridCol %}<div class="{{ params.gridCol }}">{% endif %}
  
<div class="hee-card hee-card--department{%- if params.classes %} {{ params.classes }}{% endif %}">
  <div class="hee-card--department__header">
    {% if params.heading %}
      <h2 class="hee-card__heading">{{ params.heading | safe }}</h2>
    {% endif %}

    <h2 class="nhsuk-heading-m hee-card__jobtitle" aria-label="Department name">
      {{ params.name | safe }}
    </h2>

    {%- if params.organisation %}
      <p class="hee-card__organisation" aria-label="Organisation" >{{ params.organisation | safe }}</p>
    {%- endif %}
  </div>

  <ul class="hee-card__contact">
    {%- if params.telephone %}
      <li class="hee-card__telephone hee-card__contact__item" aria-label="Telephone"><a href="tel:{{ params.telephone | safe }};">{{ params.telephone | safe }}</a></li>
    {%- endif %}

    {%- if params.email %}
      <li class="hee-card__email hee-card__contact__item" aria-label="Email"><a href="mailto:{{ params.email | safe }};">{{ params.email | safe }}</a></li>
    {%- endif %}

    {%- if params.website %}
      <li class="hee-card__website hee-card__contact__item" aria-label="Website"><a href="{{ params.website | safe }}">{{ params.website | safe }}</a></li>
    {%- endif %}

    {%- if params.linkedin %}
      <li class="hee-card__linkedin hee-card__contact__item" aria-label="Linkedin"><a href="https://www.linkedin.com/company/{{ params.linkedin | safe }}">{{ params.linkedin | safe }}</a></li>
    {%- endif %}

    {%- if params.twitter %}
      <li class="hee-card__twitter hee-card__contact__item" aria-label="Twitter"><a href="https://twitter.com/{{ params.twitter | safe }}">@{{ params.twitter | safe }}</a></li>
    {%- endif %}
  </ul>

  {%- if params.address %}
    <p class="hee-card__address" aria-label="Address" >{{ params.address | safe }}</p>
  {%- endif %}

  {%- if params.description %}
    <p class="hee-card__description" aria-label="Description" >{{ params.description | safe }}</p>
  {%- endif %}

</div>

{%- if params.gridCol %}</div>{% endif %}

{% endmacro %}