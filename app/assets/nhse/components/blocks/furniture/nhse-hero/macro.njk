{% macro nhseHero(params) %}
<div class="nhse-hero">
  <div class="nhse-hero__image" style="background-image:url({{ params.image }});"></div>
  <div class="nhse-hero__content nhsuk-width-container">
    <div class="nhse-hero__content__border"></div>
    {% if params.title %}
      <div class="nhse-hero__title">
        {% if params.title %}
          <h1>{{ params.title }}</h1>
        {% endif %}
      </div>
    {% endif %}
    {% if params.text %}
      <div class="nhse-hero__text">
        <p>{{ params.text }}</p>
      </div>
    {% endif %}
  </div>
</div>
{% endmacro %}
