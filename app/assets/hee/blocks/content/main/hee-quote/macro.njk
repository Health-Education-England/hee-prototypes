{% macro quote(params) %}
  <div class="hee-quote">
    <h2 class="nhsuk-u-visually-hidden">Quote</h2>
    <div class="hee-quote__text">
      {{ params.text }}
    </div>
    {% if params.source %}
      <div class="hee-quote__source">
        {{ params.source }}
      </div>
    {% endif %}
  </div>
{% endmacro %}
