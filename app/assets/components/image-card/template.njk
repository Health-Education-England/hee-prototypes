<div class="nhsuk-image--card">
  {%- if params.imgURL %}
    <img class="nhsuk-image--card__img" src="{{ params.imgURL }}" alt="{{ params.imgALT }}" />
  {%- endif %}
  {%- if params.imgCaption %}
  <figcaption class="nhsuk-image--card__caption">
    {{ params.imgCaption }}
  </figcaption>
  {%- endif %}
</div>